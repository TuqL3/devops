global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'go-app'
    static_configs:
      - targets: ['{{ hostvars["app_server"]["ansible_host"] }}:8080']

  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'app-node-exporter'
    static_configs:
      - targets: ['{{ hostvars["app_server"]["ansible_host"] }}:9100']

  - job_name: 'monitoring-node-exporter'
    static_configs:
      - targets: ['localhost:9100']